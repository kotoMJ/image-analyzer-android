<navigation
	android:id="@+id/feature_1_navigation"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	app:startDestination="@id/flow_step_one">

	<fragment
		android:id="@+id/flow_step_one"
		android:name="com.example.android.feature1.ui.FlowStepFragment"
		tools:layout="@layout/flow_step_one_fragment">
		<argument
			android:name="setargs"
			android:defaultValue="Android!" />

		<argument
			android:name="step"
			android:defaultValue="1"
			argType="integer" />

		<action
			android:id="@+id/next_action"
			app:destination="@id/flow_step_two">
		</action>
	</fragment>

	<fragment
		android:id="@+id/flow_step_two"
		android:name="com.example.android.feature1.ui.FlowStepFragment"
		tools:layout="@layout/flow_step_two_fragment">

		<argument
			android:name="step"
			android:defaultValue="2"
			argType="integer" />

		<action
			android:id="@+id/next_action">
		</action>
	</fragment>

</navigation>
