<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="viewModel"
			type="com.example.android.coverage.ui.settings.SettingsViewModel" />

		<variable
			name="view"
			type="com.example.android.coverage.ui.settings.SettingsView" />

	</data>

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.example.android.coverage.navigation.com.example.android.coverage.SettingsFragment">

		<TextView
			android:id="@+id/titleX"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:layout_marginStart="-1dp"
			android:layout_marginEnd="8dp"
			android:textAlignment="center"
			android:textSize="52sp"
			android:onClick="@{() -> view.nextToken()}"
			android:text="@{viewModel.dummy}"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />

		<TextView
			android:id="@+id/textX"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:textAlignment="center"
			android:textSize="32sp"
			tools:text="@string/settings_fragment_text"
			app:layout_constraintTop_toBottomOf="@+id/titleX"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />

	</android.support.constraint.ConstraintLayout>
</layout>